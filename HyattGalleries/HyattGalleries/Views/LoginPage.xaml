<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HyattGalleries.Views.LoginPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{StaticResource AppName}" FontSize= "70" Margin="0, 50, 0, 80"
                        VerticalOptions="StartAndExpand"  HorizontalOptions="Center" />

            <Label Text="Username" FontSize="25" Margin="0, 0, 0, 0" HorizontalTextAlignment="Center"></Label>
            <Entry Margin="50, 0, 50, 25"></Entry>
            <Label Text="Password" FontSize="25" Margin="0, 0, 0, 0" HorizontalTextAlignment="Center"></Label>
            <Entry Margin="50, 0, 50, 25" IsPassword="True"></Entry>
            <Button Text="Log in" FontSize="18" Margin="50, 0, 50, 0" Padding="0, 5, 0, 5"
                    HeightRequest="50" CornerRadius="25" Clicked="onLoginClicked"></Button>
            <Button Text="Log in with Facebook" FontSize="18" Margin="50, 0, 50, 200" Padding="0, 5, 0, 5"
                    HeightRequest="50" CornerRadius="25" Clicked="onFbLoginClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>