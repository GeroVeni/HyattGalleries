<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="HyattGalleries.Views.WelcomePage">
    <StackLayout>
         <Label Text="HYATT" FontSize= "70" Margin="0, 50, 0, 0"
                        VerticalOptions="StartAndExpand"  HorizontalOptions="Center" />
        <Label Text="Welcome to Hyatt Thessaloniki" FontSize="25" Margin="10, 0, 0, 10" HorizontalTextAlignment="Center"></Label>
        <Button Text="Explore" FontSize="30" Padding="0,35,0,35" Margin="50,0,50,20" Clicked="onExploreClicked"></Button>
        <Label Text="Explore other Hyatt exhibitions" FontSize="20" Margin="5, 0, 5, 0"></Label>
        <BoxView Color="Black"  HeightRequest="2" Margin="5, 0, 5, 0"></BoxView>
        <ScrollView Margin="5,10,5,10" Orientation="Horizontal" >
            <StackLayout Orientation="Vertical" Padding="10,80,10,30">
                <!--<ImageButton ></ImageButton>-->
                <BoxView></BoxView>
                <Label ></Label>
            </StackLayout>
        </ScrollView>
    </StackLayout>
</ContentPage>
